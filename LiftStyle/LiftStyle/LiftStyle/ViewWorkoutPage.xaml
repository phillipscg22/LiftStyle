             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftStyle.ViewWorkoutPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#999c94">
            <!--<Label Text="View Workout Page"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />-->
            
                <StackLayout>
